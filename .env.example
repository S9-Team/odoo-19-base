# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Application name (used to organize backups in S3)
APP_NAME="odoo_local"

# Application domain (used for HTTP backups)
# Change according to environment and configured port
APP_DOMAIN=http://localhost:8069

# ==============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# ==============================================================================

# Specific database name (optional, leave empty to allow multiple)
DB_NAME=

# PostgreSQL user
DB_USER=dbuser

# PostgreSQL password
DB_PASSWORD=dbpassword

# Database host 
DB_HOST=dbhost

# PostgreSQL port
DB_PORT=5432

# ==============================================================================
# DATABASE FILTERS AND PREFIXES
# ==============================================================================

# Prefix to filter databases in backup operations
# The backup.sh script will search for DBs starting with this prefix
DB_PREFIX="odoo_"

# Regular expression filter for visible databases in Odoo
# Use escape (\) for special characters
DB_FILTER="odoo\_*"

# ==============================================================================
# ODOO SECURITY
# ==============================================================================

# Odoo master password (CHANGE IN PRODUCTION)
MASTER_PASSWORD=yourmasterpassword

# Allow listing databases (True/False)
# Recommended for production: False
LIST_DB=True

# ==============================================================================
# GITHUB CONFIGURATION
# ==============================================================================

# GitHub personal access token (with repository read permissions)
# Generate at: https://github.com/settings/tokens
GIT_TOKEN="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# GitHub Enterprise personal access token (with repository read permissions)
# Generate at: https://github.com/settings/tokens your must have access to enterprise repo
GIT_ENTERPRISE_TOKEN="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Repository branch to clone
GIT_BRANCH="main"

# Repository in format: owner/repository
GIT_REPOSITORY="owner/repository-name"

# ==============================================================================
# AWS S3 CONFIGURATION (For backups)
# ==============================================================================

# S3 bucket name
S3_BUCKET_NAME="your-bucket-name"

# AWS Access Key ID
S3_ACCESS_KEY="AKIAXXXXXXXXXXXXXXXX"

# AWS Secret Access Key
S3_SECRET_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
